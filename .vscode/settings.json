{
    "editor.tabSize": 2,
    "editor.rulers": [
        100
    ],
    "ros.distro": "humble",
    "search.exclude": {
        "**/build": true,
        "**/install": true,
        "**/log": true
    },

    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        // "editor.formatOnSave": true
    },
    "python.analysis.typeCheckingMode": "basic",
    "python.formatting.provider": "black"
}